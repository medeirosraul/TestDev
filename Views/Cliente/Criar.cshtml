@model TestDev.Models.Clientes.Cliente

@{
    ViewData["Title"] = "Cadastro de cliente";
}

<h1>Cadastro</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col">
        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h4>dados do cliente</h4>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class="form-control">
                    <option value="0">Pessoa Física</option>
                    <option value="1">Pessoa Jurídica</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group PF col-md-8 col-lg-6">
                    <label asp-for="CPF" class="control-label"></label>
                    <input asp-for="CPF" class="form-control cpf" />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
                <div class="form-group PF col-md-4 col-lg-6">
                    <label asp-for="DataNascimento" class="control-label"></label>
                    <input asp-for="DataNascimento" class="form-control data" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>
                <div class="form-group PF col-md-4 col-lg-3">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group PF col-md-8 col-lg-9">
                    <label asp-for="Sobrenome" class="control-label"></label>
                    <input asp-for="Sobrenome" class="form-control" />
                    <span asp-validation-for="Sobrenome" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group PJ col-md-4 col-lg-3">
                    <label asp-for="CNPJ" class="control-label"></label>
                    <input asp-for="CNPJ" class="form-control cnpj" />
                    <span asp-validation-for="CNPJ" class="text-danger"></span>
                </div>
                <div class="form-group PJ col-md-8 col-lg-9">
                    <label asp-for="RazaoSocial" class="control-label"></label>
                    <input asp-for="RazaoSocial" class="form-control" />
                    <span asp-validation-for="RazaoSocial" class="text-danger"></span>
                </div>
                <div class="form-group PJ col-12">
                    <label asp-for="NomeFantasia" class="control-label"></label>
                    <input asp-for="NomeFantasia" class="form-control" />
                    <span asp-validation-for="NomeFantasia" class="text-danger"></span>
                </div>
            </div>
            
            
            <h4>dados do endereço do cliente</h4>
            <div class="form-row">
                <div class="form-group col-md-3 col-lg-2">
                    <label asp-for="Endereco.CEP" class="control-label"></label>
                    <input asp-for="Endereco.CEP" class="form-control" />
                    <span asp-validation-for="Endereco.CEP" class="text-danger"></span>
                </div>
                <div class="form-group col-md-9 col-lg-10">
                    <label asp-for="Endereco.Logradouro" class="control-label"></label>
                    <input asp-for="Endereco.Logradouro" class="form-control" />
                    <span asp-validation-for="Endereco.Logradouro" class="text-danger"></span>
                </div>
                <div class="form-group  col-md-4">
                    <label asp-for="Endereco.Numero" class="control-label"></label>
                    <input asp-for="Endereco.Numero" class="form-control numero" />
                    <span asp-validation-for="Endereco.Numero" class="text-danger"></span>
                </div>
                <div class="form-group  col-md-4">
                    <label asp-for="Endereco.Complemento" class="control-label"></label>
                    <input asp-for="Endereco.Complemento" class="form-control" />
                    <span asp-validation-for="Endereco.Complemento" class="text-danger"></span>
                </div>
                <div class="form-group  col-md-4">
                    <label asp-for="Endereco.Bairro" class="control-label"></label>
                    <input asp-for="Endereco.Bairro" class="form-control" />
                    <span asp-validation-for="Endereco.Bairro" class="text-danger"></span>
                </div>
                <div class="form-group  col-md-6 col-lg-8">
                    <label asp-for="Endereco.Cidade" class="control-label"></label>
                    <input asp-for="Endereco.Cidade" class="form-control" />
                    <span asp-validation-for="Endereco.Cidade" class="text-danger"></span>
                </div>
                <div class="form-group  col-md-6 col-lg-4">
                    <label asp-for="Endereco.UF" class="control-label"></label>
                    <input asp-for="Endereco.UF" class="form-control" />
                    <span asp-validation-for="Endereco.UF" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts
{
    <script src="~/js/jquery.mask.js"></script>
    <script type="text/javascript">
        // Máscaras
        $('.cpf').mask('000.000.000-00', {reverse: true});
        $('.cnpj').mask('00.000.000/0000-00', { reverse: true });
        $('.data').mask('00/00/0000');
        $('.numero').mask('000.000.000.000.000', { reverse: true });

        // Tipo de Pessoa
        $("#Tipo").on("change", function () {
            if ($("#Tipo").val() == 0) {
                $(".PJ").hide();
                $(".PF").show();
            } else {
                $(".PF").hide();
                $(".PJ").show();
            }
        });

        $("#Tipo").trigger("change");
    </script>
}

